<!-- activity_completion.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <!-- Grass Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/screenshot_2024_10_30_020858"
         />

    ]<!-- Button in the Top-Left Corner -->


    <!-- Congratulatory Message in the Center -->
    <TextView
        android:id="@+id/congratulations_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="CONGRATULATIONS !!! YOU HAVE FINISHED ALL OF THE LEVEL!"
        android:textColor="#000"
        android:textSize="70sp" />

    <!-- Player Score at the Bottom Center -->
    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="25sp" />
</FrameLayout>
