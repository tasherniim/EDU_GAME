<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.EDUGAME">

    <activity android:name=".MainMenuActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".NameInputActivity"
        android:exported="true"/>
    <activity android:name=".AlphabetCategoryActivity"
        android:exported="true"/>
    <activity android:name=".NumbersCategoryActivity"
        android:exported="true"/>
    <activity android:name=".ColoursCategoryActivity"
        android:exported="true"/>
    <activity android:name=".CompletionActivity"
        android:exported="true"/>
    <activity android:name=".ActivitySelection"
        android:exported="true"/>

</application>
</manifest>
